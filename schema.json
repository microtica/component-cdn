{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "schema://microtica/component-cdn.json",
    "title": "Component Schema",
    "type": "object",
    "properties": {
        "inputs": {
            "type": "object",
            "properties": {
                "DomainName": {
                    "type": "string",
                    "default": " ",
                    "description": "Domain name to be associated with this CDN."
                },
                "CertificateARN": {
                    "type": "string",
                    "default": " ",
                    "description": "ARN of the custom certificate configure with this distribution. The certificate should cover the provided domain name."
                },
                "RestrictAccess": {
                    "type": "string",
                    "default": "false",
                    "enum": [
                        "true",
                        "false"
                    ],
                    "description": "If set to 'true' the content will only be available with pre-signed URLs or cookies."
                },
                "RetainContent": {
                    "type": "string",
                    "default": "true",
                    "enum": [
                        "true",
                        "false"
                    ],
                    "description": "If enabled, the S3 bucket and the content stored in the bucket will be retained."
                },
                "PublicKey": {
                    "type": "string"
                }
            },
            "required": [
                "RestrictAccess",
                "RetainContent"
            ]
        }
    },
    "additionalProperties": false
}